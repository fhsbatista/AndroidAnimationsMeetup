<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clipToPadding="false"
    android:padding="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivAnimationDrawable"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            tools:ignore="ContentDescription"
            tools:src="@drawable/walk1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/animation_drawable" />

        <ImageView
            android:id="@+id/ivAnimVecDrawable"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_loading_dots"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/animated_vector_drawable" />

        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:src="@drawable/search_to_close"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ivAnimals"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:src="@drawable/morphing_animals"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</ScrollView>